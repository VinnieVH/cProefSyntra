    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="/styles/navbar.css">
    <link rel="stylesheet" href="/styles/show.css">
  </head>
    <nav class="navbar-styling navbar navbar-default navbar-fixed-top">
      <div class="container">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/home">
            <img class="brand-image" alt="Brand" src="/logo/logo_eindwerk.png">
          </a>
        </div>
        <ul class="languages nav navbar-nav navbar-left">
          <li class="language-option"><a href="#">NL</a></li>
          <li class="language-option"><a href="#">FR</a></li>
          <li class="language-option"><a id="english" href="#" selected>ENG</a></li>
        </ul>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <% if(!user){ %>
            <li class="hvr-underline-from-center"><a href="/register">Sign Up</a></li>
            <li class="hvr-underline-from-center"><a href="/login">Login</a></li>
            <% } %>
            <% if(user) { %>
            <li class="hvr-underline-from-center"><a href="#">Signed In As <%= user.firstName%></a></li>
            <li class="hvr-underline-from-center"><a href="/logout">Logout</a></li>
            <% } %>
          </ul>
        </div>
      </div>
      </div>
    </nav>
    <nav class="category-bar navbar navbar-default navbar-fixed-top">
      <div class="container">
        <ul class="nav navbar-nav navbar-left">
          <li class="category-item hvr-underline-from-center"><a href="/register">Jackets</a></li>
          <li class="category-item hvr-underline-from-center"><a href="/login">Shirts</a></li>
          <li class="category-item hvr-underline-from-center"><a href="#">Sweaters</a></li>
          <li class="category-item hvr-underline-from-center"><a href="#">T-shirts</a></li>
          <li class="category-item hvr-underline-from-center"><a href="#">Trousers</a></li>
          <li class="category-item hvr-underline-from-center"><a href="#">Shoes</a></li>
        </ul>
        <% if(user){ %>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="#" id="shoppingbag" class="li-a-navbar hvr-underline-from-center"><i class="nav-shoppingbag fas fa-shopping-bag"></i><span>Shopping Bag</a></li>
          <li class="padding-wishlist"><a href="#" class="li-a-navbar hvr-underline-from-center"><i class="nav-wishlist far fa-heart"></i><span>Wishlist</span></a></li>
        </ul>
        <% } %>
      </div>
    </nav>
    <div class="container">
        <% if(error && error.length > 0){ %>
          <div class="flash-box alert alert-danger" role="alert">
            <%=error%>
          </div>
        <% } %>
        <% if(success && success.length > 0){ %>
          <div class="flash-box alert alert-success" role="alert">
            <%=success%>
          </div>
        <% } %>
      </div>

       
